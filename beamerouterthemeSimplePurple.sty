\mode<presentation>

% frame title bar
\setbeamerfont{frametitle}{size=\large, series=\bfseries}
\setbeamerfont{framesubtitle}{size=\footnotesize, series=\mdseries}

\defbeamertemplate*{frametitle}{SimplePurple}[1][]{
    \vskip0.01\paperheight%
    \begin{beamercolorbox}[wd=\paperwidth,ht=0.1\paperheight]{frametitle}
        \begin{tikzpicture}
            \useasboundingbox(0, 0) rectangle (\the\paperwidth, 0.12\paperheight);
            \fill[myPurple] (0.01\paperwidth, 0)
                             rectangle (0.99\paperwidth, 0.101\paperheight);
            {\node[anchor=west, font=\usebeamerfont{frametitle}] at (0,0.61){\hspace{5pt}\MakeUppercase\insertframetitle};%
            \node[anchor= west, myLPurple, font=\usebeamerfont{framesubtitle}] at (0,0.21){\hspace{15pt}\insertframesubtitle};}%
        \end{tikzpicture}
    \end{beamercolorbox}
}



\mode<presentation>

% custom colours
\definecolor{myPurple}{RGB}{125, 62, 215}
\definecolor{myLPurple}{RGB}{230, 210, 250}
\definecolor{myDPurple}{RGB}{70, 35, 120}
\definecolor{myGray}{RGB}{90, 90, 90}
\definecolor{myBlack}{RGB}{10, 0, 20}
\definecolor{myWhite}{RGB}{249, 243, 251}

%% set element colours

% title
\setbeamercolor{title}{fg=myBlack}
\setbeamercolor{subtitle}{fg=myGray}
\setbeamercolor{author}{fg=myWhite}
\setbeamercolor{date}{fg=myWhite}

% frame titles
\setbeamercolor{frametitle}{fg=myWhite}
\setbeamercolor{framesubtitle}{fg=myLPurple} %hardcoded in frametitle

% general
\setbeamercolor{itemize item}{fg=myDPurple}
\setbeamercolor{itemize subitem}{fg=myPurple}
\setbeamercolor{enumerate item}{fg=myDPurple}
\setbeamercolor{enumerate subitem}{fg=myDPurple}
\setbeamercolor{normal text}{fg=myBlack}
\setbeamercolor{footlinecolor}{bg=myLPurple}
\setbeamercolor{alerted text}{fg=myPurple}


% captions
\setbeamercolor{caption name}{fg=myBlack}

\mode<all>
